# ======================
# SUPABASE CONFIGURATION
# ======================
# URL of your Supabase project (required for all Supabase operations)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Anonymous/public API key (required for client-side and server-side operations)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Service role key with elevated privileges (required for admin operations)
# WARNING: Keep this secure and never expose it client-side
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Management API token for Supabase dashboard operations (optional)
SUPABASE_MANAGEMENT_TOKEN=your-management-token

# ==================
# DATABASE SETTINGS
# ==================
# Direct database connection details (only needed for direct DB access)
# For most Supabase operations, the URL and keys above are sufficient
SUPABASE_HOST=db.your-project-id.supabase.co
SUPABASE_PORT=5432
SUPABASE_USER=postgres
SUPABASE_PASSWORD=your-db-password
SUPABASE_DATABASE=postgres
SUPABASE_SCHEMA=public

# Full database connection string (alternative to individual settings above)
REMOTE_DATABASE_URL=postgresql://postgres:your-db-password@db.your-project-id.supabase.co:5432/postgres

# ==================
# APPLICATION CONFIG
# ==================
# Base URL of your application (required for auth redirects and absolute URLs)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Optional: Set to 'production' in production environments
NODE_ENV=development

# Optional: For custom domain support
# BASE_DOMAIN=yourdomain.com

# ================
# GOOGLE SERVICES
# ================
# Path to Google Cloud service account credentials file (for GCP services)
GOOGLE_APPLICATION_CREDENTIALS=./google-credentials.json

# Google Gemini API key (for AI content generation)
GOOGLE_GEMINI_API_KEY=your-gemini-api-key

# Google OAuth credentials (for authentication)
GOOGLE_CLIENT_SECRET=your-oauth-client-secret
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-oauth-client-id

# Google Cloud region for services
GOOGLE_LOCATION=us-central1

# Google Cloud project ID
GOOGLE_PROJECT_ID=your-gcp-project-id

# =================
# AI API PROVIDERS
# =================
# OpenAI API key (for GPT-4o and other OpenAI models)
OPENAI_API_KEY=your-openai-api-key

# Mistral AI API key (alternative AI provider)
MISTRAL_API_KEY=your-mistral-api-key

# =================
# REDIS CONFIGURATION
# =================
# Redis connection URL (required for queue workers)
REDIS_URL=redis://username:password@localhost:6379

# Optional Redis password
REDIS_PASSWORD=your-redis-password

# Optional Redis TLS configuration (set to 'true' if using TLS)
REDIS_TLS=false
